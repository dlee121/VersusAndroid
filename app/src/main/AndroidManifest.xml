<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vs.bcd.versus">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/vs_icon_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StartScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WhatsYourName"
            android:label="@string/title_activity_whats_your_name"
            android:parentActivityName=".StartScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vs.bcd.versus.StartScreen" />
        </activity>
        <activity
            android:name=".WhatsYourBirthday"
            android:label="@string/title_activity_whats_your_birthday"
            android:parentActivityName=".WhatsYourName"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vs.bcd.versus.WhatsYourName" />
        </activity>
        <activity
            android:name=".WhatsYourUsername"
            android:label="@string/title_activity_whats_your_username"
            android:parentActivityName=".WhatsYourBirthday"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vs.bcd.versus.WhatsYourBirthday" />
        </activity>
        <activity
            android:name=".WhatsYourPassword"
            android:label="@string/title_activity_whats_your_password"
            android:parentActivityName=".WhatsYourUsername"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vs.bcd.versus.WhatsYourUsername" />
        </activity>
        <activity
            android:name=".PhoneOrEmail"
            android:label="@string/title_activity_phone_or_email"
            android:parentActivityName=".WhatsYourPassword"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vs.bcd.versus.WhatsYourPassword" />
        </activity>
    </application>

</manifest>