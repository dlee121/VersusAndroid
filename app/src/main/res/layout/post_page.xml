<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_page_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/vsTwo"
    tools:context="com.vs.bcd.versus.activity.MainContainer">


    <TextView
        android:id="@+id/post_page_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question"
        android:layout_alignParentTop="true"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/post_page_vs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_page_question"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="vs" />

    <TextView
        android:id="@+id/post_page_redname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_page_question"
        android:textAlignment="center"
        android:layout_toLeftOf="@id/post_page_vs"
        android:layout_marginRight="5dp"
        android:text="Red" />

    <TextView
        android:id="@+id/post_page_blackname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/post_page_vs"
        android:layout_below="@id/post_page_question"
        android:textAlignment="center"
        android:layout_marginLeft="5dp"
        android:text="Black" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_page_redname"
        android:layout_alignRight="@id/post_page_redname"
        android:text="1" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/post_page_blackname"
        android:layout_below="@id/post_page_blackname"
        android:text="1"/>

    <EditText
        android:id="@+id/commentInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_marginTop="101dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_marginRight="54dp"
        android:layout_marginEnd="54dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/submitCommentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_centerVertical="true"
        android:text="Submit" />
</RelativeLayout>
