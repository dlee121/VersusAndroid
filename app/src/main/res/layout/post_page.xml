<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/post_page_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.vs.bcd.versus.activity.MainContainer">

    <RelativeLayout
        android:id="@+id/topCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_tc"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:src="@drawable/vs_shadow_w_tag"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/usernametvtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/profile_image_tc"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="120dp"
            android:text="dlee121"
            android:textColor="#FF0000FF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/timetvtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/usernametvtc"
            android:text="two minutes ago"
            android:textSize="11sp" />


        <TextView
            android:id="@+id/usercommenttc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_alignLeft="@id/usernametvtc"
            android:layout_below="@id/usernametvtc"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:textColor="#FF000000"
            android:text="No text display limit for top card, to show full comment. That's the point of having this top card."
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/heartbuttontc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/usercommenttc"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/profile_image_tc"
            android:background="@color/white"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_marginRight="8dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:srcCompat="@drawable/ic_heart"/>

        <TextView
            android:id="@+id/heartCounttc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/usercommenttc"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/heartbuttontc"
            android:text="12345"
            android:textAlignment="center"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/broken_heart_button_tc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/usercommenttc"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/heartCounttc"
            android:background="@color/white"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:srcCompat="@drawable/ic_heart_broken"/>

        <Button
            android:id="@+id/replybuttontc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/usercommenttc"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_reply_v2"
            android:drawablePadding="2dp"
            android:layout_marginTop="3dp"
            android:layout_alignParentRight="true"
            android:gravity="left|center_vertical"
            android:layout_marginRight="8dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="Reply"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:textColor="#FF808080"
            android:textAllCaps="false"
            android:textSize="12sp"
            style="?android:attr/borderlessButtonStyle"/>


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_cs"
        android:layout_below="@id/topCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/postpage_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_reply_white_fab"/>

</RelativeLayout>