<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <TextView
            android:id="@+id/cef_qtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FF000000"
            android:text="question"
            android:textSize="18sp" />


        <!--for vs card with only texts-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:layout_below="@id/cef_qtxt"
            android:weightSum="11">

            <TextView
                android:id="@+id/cef_rtxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="redname"
                android:layout_weight="5"
                android:textColor="#FF000000"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="V"
                    android:textSize="20sp"
                    android:textColor="@color/vsRed"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="S"
                    android:textSize="20sp"
                    android:textColor="@color/vsBlue"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </LinearLayout>

            <TextView
                android:id="@+id/cef_btxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="blackname"
                android:textColor="#FF000000"
                android:layout_weight="5"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

    </RelativeLayout>




</android.support.v7.widget.CardView>