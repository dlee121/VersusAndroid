<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/search_user_photo"
        android:layout_width="@dimen/messenger_profile_image"
        android:layout_height="@dimen/messenger_profile_image"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/default_profile"/>

    <TextView
        android:id="@+id/search_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@id/search_user_photo"
        android:layout_toStartOf="@+id/check_circle"
        android:layout_centerVertical="true"
        android:text="TextView" />

    <ImageView
        android:id="@id/check_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        app:srcCompat="@drawable/ic_check_circle_unchecked_24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/search_user_photo"
        android:layout_marginTop="4dp"/>


</RelativeLayout>
