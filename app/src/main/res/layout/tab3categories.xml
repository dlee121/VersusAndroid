<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vs.bcd.versus.activity.MainActivity">



    <android.support.v7.widget.RecyclerView
        android:id="@+id/category_selection_rvt3"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <RelativeLayout
        android:id="@+id/category_posts_list"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:background="#EEEEEE"
            android:layout_alignParentTop="true"></LinearLayout>

        <Button
            android:id="@+id/sort_type_selector"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:layout_alignParentTop="true"
            style="?android:attr/borderlessButtonStyle"
            android:background="#EEEEEE"
            android:paddingStart="8dp"
            android:drawablePadding="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:drawableLeft="@drawable/ic_gray_new_10small"
            android:drawableRight="@drawable/ic_gray_arrow_dropdown"
            android:textColor="#FF666666"
            android:textSize="12sp"
            android:gravity="center_vertical|left"
            android:text="MOST RECENT" />

        <android.support.v4.widget.SwipeRefreshLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swipe_container_catfrag"
            android:layout_below="@id/sort_type_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_cf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.v4.widget.SwipeRefreshLayout>


    </RelativeLayout>




</RelativeLayout>
