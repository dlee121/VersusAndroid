<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vsRed"
    tools:context="com.vs.bcd.versus.activity.MainContainer">

    <ImageButton
        android:id="@+id/btn_slide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/ic_search_white"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="8dp"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:id="@+id/top_right_img_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/messenger_button_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="0"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:background="@drawable/badge_circle"/>


    <Button
        android:id="@+id/top_right_text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        android:visibility="invisible"
        android:clickable="false"
        style="?android:attr/borderlessButtonStyle"
        android:text="OK" />

    <ProgressBar
        android:id="@+id/toolbar_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp"
        style="?android:attr/android:progressBarStyleSmall"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/btn_slide"
        android:gravity="center"
        android:text="Versus"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:textSize="21dp" />

</RelativeLayout>
