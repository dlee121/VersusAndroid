<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    card_view:contentPadding = "4dp"
    card_view:cardElevation="0dp"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cef_profile_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:src="@drawable/vs_shadow_w_tag"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/cef_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/cef_profile_img"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="120dp"
            android:text="dlee121"
            android:textColor="#FF0000FF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cef_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_alignLeft="@id/cef_username"
            android:layout_below="@id/cef_username"
            android:layout_marginRight="8dp"
            android:textColor="#FF000000"
            android:text="comment content up to two lines two lines two lines like like like this. extra gets ellipsized like this!!!"
            android:textSize="14sp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>