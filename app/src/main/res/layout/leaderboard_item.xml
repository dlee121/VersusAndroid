<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginStart="20dp"
    android:layout_marginBottom="18dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_lb"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="2dp"
        android:clickable="true"
        android:src="@drawable/vs_shadow_w_tag"
        app:civ_border_color="#FF000000"
        android:layout_alignParentBottom="true"
        app:civ_border_width="2dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/profile_image_lb">
        <TextView
            android:id="@+id/lb_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:text="WWWWWWWWWWWWWWWWWWWW" />
        <TextView
            android:id="@+id/lb_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/lb_username"
            android:text="420 influence"  />

    </RelativeLayout>








</RelativeLayout>
