<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="8dp"
    card_view:contentPaddingLeft="4dp"
    card_view:contentPaddingTop="4dp"
    card_view:contentPaddingRight="4dp"
    card_view:contentPaddingBottom="0dp"
    card_view:cardElevation="0dp"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:id="@+id/topCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/usernametvtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="120dp"
            android:text="dlee121"
            android:textColor="#FF0000FF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/timetvtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/usernametvtc"
            android:text="two minutes ago"
            android:textSize="11sp" />

        <ImageButton
            android:id="@+id/topcard_overflow_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/usernametvtc"
            android:layout_alignBottom="@id/usernametvtc"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_overflow_horizontal"
            android:background="@null" />

        <ImageView
            android:id="@+id/medal_image_tc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/usernametvtc"
            android:layout_toRightOf="@id/timetvtc"
            android:scaleX="0.7"
            android:scaleY="0.7"
            />


        <TextView
            android:id="@+id/usercommenttc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_alignStart="@id/usernametvtc"
            android:layout_below="@id/usernametvtc"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:textColor="#FF000000"
            android:text="No text display limit for top card, to show full comment. That's the point of having this top card."
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/heartbuttontc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/usercommenttc"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:layout_alignStart="@id/usernametvtc"
            android:background="@color/white"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_marginRight="8dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:srcCompat="@drawable/ic_heart"/>

        <TextView
            android:id="@+id/upvotes_tc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/usercommenttc"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/heartbuttontc"
            android:text="12345"
            android:textAlignment="center"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/broken_heart_button_tc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/usercommenttc"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/upvotes_tc"
            android:background="@color/white"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_marginRight="8dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:srcCompat="@drawable/ic_heart_broken"/>

        <TextView
            android:id="@+id/downvotes_tc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/usercommenttc"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/broken_heart_button_tc"
            android:text="12345"
            android:textAlignment="center"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/sort_type_selector_background_topcard"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:background="#EEEEEE"
            android:layout_below="@id/heartbuttontc"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"></LinearLayout>

        <Button
            android:id="@+id/sort_type_selector_topcard"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_below="@id/heartbuttontc"
            android:layout_marginTop="24dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="#EEEEEE"
            android:paddingStart="8dp"
            android:drawablePadding="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:drawableStart="@drawable/ic_gray_thumb_10small"
            android:drawableEnd="@drawable/ic_gray_arrow_dropdown"
            android:textColor="#FF666666"
            android:textSize="12sp"
            android:gravity="center_vertical|start"
            android:text="POPULAR" />


    </RelativeLayout>

</android.support.v7.widget.CardView>






