<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    card_view:contentPadding = "4dp"
    card_view:cardElevation="0dp"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_cs"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:src="@drawable/vs_shadow_w_tag"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/usernametvcs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/profile_image_cs"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="120dp"
            android:text="dlee121"
            android:textColor="#FF0000FF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/timetvcs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/usernametvcs"
            android:text="two minutes ago"
            android:textSize="11sp" />


        <TextView
            android:id="@+id/usercomment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_alignLeft="@id/usernametvcs"
            android:layout_below="@id/usernametvcs"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#FF000000"
            android:text="comment content up to two lines two lines two lines like like like this. extra gets ellipsized like this!!!"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/heartbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/usercomment"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/profile_image_cs"
            android:background="@color/white"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_marginRight="8dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:srcCompat="@drawable/ic_heart"/>

        <TextView
            android:id="@+id/heartCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/usercomment"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/heartbutton"
            android:text="12345"
            android:textAlignment="center"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/broken_heart_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/usercomment"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/heartCount"
            android:background="@color/white"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:srcCompat="@drawable/ic_heart_broken"/>

        <Button
            android:id="@+id/replybuttoncs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/usercomment"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_reply_v2"
            android:drawablePadding="2dp"
            android:layout_marginTop="3dp"
            android:layout_alignParentRight="true"
            android:gravity="left|center_vertical"
            android:layout_marginRight="8dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="Reply"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:textColor="#FF808080"
            android:textAllCaps="false"
            android:textSize="12sp"
            style="?android:attr/borderlessButtonStyle"/>

        <ImageView
            android:id="@+id/medal_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/profile_image_cs"
            android:layout_alignRight="@id/profile_image_cs"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_marginBottom="-13dp"
            />


    </RelativeLayout>
</android.support.v7.widget.CardView>