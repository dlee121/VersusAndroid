<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    tools:context="com.vs.bcd.versus.activity.MainActivity">

    <Button
        android:id="@+id/filter_selector_tr"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="4dp"
        android:layout_alignParentTop="true"
        style="?android:attr/borderlessButtonStyle"
        android:background="#EEEEEE"
        android:paddingStart="8dp"
        android:drawablePadding="8dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:drawableLeft="@drawable/ic_gray_new_10small"
        android:drawableRight="@drawable/ic_gray_arrow_dropdown"
        android:textColor="#FF666666"
        android:textSize="12sp"
        android:gravity="center_vertical|left"
        android:text="FILTER BY CATEGORY" />

    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_container_tab2"
        android:layout_below="@id/filter_selector_tr"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>
