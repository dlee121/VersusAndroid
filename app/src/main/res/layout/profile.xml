<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/username_pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="84dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#000000"
        android:text="WWWWWWWWWWWWWWWWWWWW" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_pt"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginStart="4dp"
        android:layout_below="@id/username_pt"
        android:clickable="true"
        android:src="@drawable/vs_shadow_w_tag"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <Button
        android:id="@+id/followbutton"
        android:layout_width="42dp"
        android:layout_height="28dp"
        android:layout_below="@id/profile_image_pt"
        android:padding="0dp"
        android:text="Follow"
        android:textSize="6sp"/>

    <TextView
        android:id="@+id/followingtext"
        android:layout_width="33dp"
        android:layout_height="17dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="6dp"
        android:paddingEnd="4dp"
        android:text="Followed"
        android:textStyle="bold"
        android:textSize="6sp"
        android:textColor="#000000"
        android:layout_below="@id/profile_image_pt"
        android:background="@drawable/rounded_rectangle"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/followingtext_checkmark"
        android:layout_width="8dp"
        android:layout_height="17dp"
        android:layout_marginStart="-6dp"
        android:paddingBottom="1dp"
        app:srcCompat="@drawable/ic_check_black"
        android:layout_toEndOf="@id/followingtext"
        android:layout_alignTop="@id/followingtext"
        android:background="@drawable/rounded_rectangle"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_pt"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/profile_image_pt">

        <LinearLayout
            android:id="@+id/follower_case"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/num_followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center"
                android:text="34 K Followers"
                android:textSize="14sp"
                android:background="@drawable/rounded_rectangle_light"/>

            <TextView
                android:id="@+id/num_following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@id/num_followers"
                android:padding="8dp"
                android:gravity="center"
                android:textSize="14sp"
                android:text="33 K Following"
                android:background="@drawable/rounded_rectangle_light"/>
        </LinearLayout>



        <TextView
            android:id="@+id/points_pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_below="@id/follower_case"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:text="123 influence" />
        <LinearLayout
            android:id="@+id/medal_case"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/points_pt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pmc_goldmedal_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="12sp"
                android:text="999"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_gold_medal"/>

            <TextView
                android:id="@+id/pmc_silvermedal_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:textSize="12sp"
                android:text="999"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_silver_medal"/>

            <TextView
                android:id="@+id/pmc_bronzemedal_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:textSize="12sp"
                android:text="999"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_bronze_medal"/>


        </LinearLayout>





    </RelativeLayout>



    <android.support.design.widget.TabLayout
        android:id="@+id/tabs_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/followingtext"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:tabTextColor="#808080"
        app:tabSelectedTextColor="@color/vsRed"
        app:tabIndicatorColor="@color/vsRed"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/history_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_below="@id/tabs_profile" />


</RelativeLayout>
