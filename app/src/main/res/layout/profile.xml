<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressbar_pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/maincase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="4dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_pt"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:clickable="true"
            android:src="@drawable/vs_shadow_w_tag"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/username_pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:textSize="18sp"
            android:text="username" />

        <Button
            android:id="@+id/followbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_adduser_black"
            android:text="Follow" />

        <TextView
            android:id="@+id/followingtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Following"
            android:padding="8dp"
            android:textStyle="bold"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_check_black"
            android:background="@drawable/border_followingtext"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/follow_case"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/maincase"
        android:layout_marginTop="36dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/num_followers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="8dp"
            android:gravity="center"
            android:background="@drawable/border"/>

        <TextView
            android:id="@+id/num_following"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:background="@drawable/border"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/medal_case"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/maincase"
        android:layout_marginTop="38dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/gmedal_pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:drawableLeft="@drawable/goldmedal"
            android:drawablePadding="8dp"
            android:text="" />


        <TextView
            android:id="@+id/smedal_pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:drawableLeft="@drawable/silvermedal"
            android:drawablePadding="8dp"
            android:layout_marginTop="4dp"
            android:text="" />


        <TextView
            android:id="@+id/bmedal_pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:drawableLeft="@drawable/bronzemedal"
            android:drawablePadding="8dp"
            android:layout_marginTop="4dp"
            android:text="" />


        <TextView
            android:id="@+id/points_pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="left|center_vertical"
            android:textSize="16sp"
            android:text="" />

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/maincase"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:tabTextColor="#808080"
        app:tabSelectedTextColor="@color/vsTwo"
        app:tabIndicatorColor="@color/vsTwo"/>

    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_container_profile"
        android:layout_below="@id/tabs_profile"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v4.widget.SwipeRefreshLayout>



</RelativeLayout>
