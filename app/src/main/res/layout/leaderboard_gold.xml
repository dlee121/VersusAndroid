<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:id="@+id/profile_container_gm"
        android:layout_width="wrap_content"
        android:layout_height="78dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_gm"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:src="@drawable/vs_shadow_w_tag"
            app:civ_border_color="#FF000000"
            android:layout_alignParentBottom="true"
            app:civ_border_width="2dp" />
        <ImageView
            android:layout_width="66dp"
            android:layout_height="46dp"
            android:layout_alignTop="@id/profile_image_gm"
            android:layout_marginTop="-18dp"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:alpha="1"
            app:srcCompat="@drawable/ic_crown_gold"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_toEndOf="@id/profile_container_gm"
        android:gravity="left|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gm_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:text="WWWWWWWWWWWWWWWWWWWW" />

        <TextView
            android:id="@+id/gm_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            android:text="420 influence" />

    </LinearLayout>


</RelativeLayout>
