<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="18dp">

    <RelativeLayout
        android:id="@+id/profile_container_gm"
        android:layout_width="wrap_content"
        android:layout_height="79dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_gm"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:src="@drawable/vs_shadow_w_tag"
            app:civ_border_color="#FF000000"
            android:layout_alignParentBottom="true"
            app:civ_border_width="2dp" />
        <ImageView
            android:layout_width="66dp"
            android:layout_height="46dp"
            android:layout_alignTop="@id/profile_image_gm"
            android:layout_marginTop="-19dp"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:alpha="1"
            app:srcCompat="@drawable/ic_crown_gold"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/profile_container_gm">
        <TextView
            android:id="@+id/gm_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:text="WW" />

        <TextView
            android:id="@+id/gm_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/gm_username"
            android:layout_marginTop="6dp"
            android:text="420 influence" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gm_points"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gmc_goldmedal_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="12sp"
                android:text="999"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_gold_medal"/>

            <TextView
                android:id="@+id/gmc_silvermedal_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:textSize="12sp"
                android:text="999"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_silver_medal"/>

            <TextView
                android:id="@+id/gmc_bronzemedal_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:textSize="12sp"
                android:text="999"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_bronze_medal"/>

        </LinearLayout>





    </RelativeLayout>




</RelativeLayout>
