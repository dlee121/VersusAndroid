<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vs.bcd.versus.activity.MainContainer">

    <Button
        android:id="@+id/new_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_arrow_upward_black_24dp"
        android:drawablePadding="6dp"
        android:textSize="12sp"
        android:text="new notifications" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/notifications_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"/>

</RelativeLayout>
