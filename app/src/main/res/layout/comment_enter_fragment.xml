<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/postquestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"
        android:textSize="24sp"
        android:text="Question" />

    <TextView
        android:id="@+id/vsx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/postquestion"
        android:layout_toStartOf="@+id/vsvsvs"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="18dp"
        android:textSize="28sp"
        android:textAlignment="center"
        android:text="X" />

    <TextView
        android:id="@id/vsvsvs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/postquestion"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/vsx"
        android:layout_alignBottom="@id/vsx"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text="vs" />

    <TextView
        android:id="@+id/vsy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/postquestion"
        android:layout_toEndOf="@id/vsvsvs"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:textSize="28sp"
        android:textAlignment="center"
        android:text="Y" />

    <EditText
        android:id="@+id/commentInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vsy"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp"
        android:text="Submit" />


</RelativeLayout>
