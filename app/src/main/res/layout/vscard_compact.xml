<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    card_view:contentPadding = "4dp"
    card_view:cardElevation="0dp"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:id="@+id/compact_card_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/cc_author_container"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_cc"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/vs_shadow_w_tag"
                android:layout_marginStart="8dp"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/cc_author_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:layout_toEndOf="@id/profile_image_cc"
                android:text="author"/>

            <TextView
                android:id="@+id/time_cc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:text="2m"
                android:textColor="#FF000000"
                android:textSize="12sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/question_vc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cc_author_container"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="question"
            android:textColor="#FF000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/red_vc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_vc"
            android:layout_marginStart="8dp"
            android:text="red"
            android:textColor="#FF000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/v_vc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/red_vc"
            android:layout_below="@id/question_vc"
            android:text="v"
            android:textColor="@color/vsBlue"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/s_vc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_vc"
            android:layout_marginEnd="4dp"
            android:layout_toEndOf="@id/v_vc"
            android:text="s"
            android:textColor="@color/vsRed"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/blue_vc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_vc"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/s_vc"
            android:text="blue"
            android:textColor="#FF000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/time_vc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/question_vc"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:text="2m"
            android:textColor="#FF000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/votes_vc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_vc"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:text="20K votes"
            android:textAlignment="center"
            android:textColor="#FF000000"
            android:textSize="12sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>