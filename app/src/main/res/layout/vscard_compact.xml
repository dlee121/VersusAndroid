<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    card_view:contentPadding = "4dp"
    card_view:cardElevation="0dp"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/question_vc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="question"
            android:textColor="#FF000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/red_vc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_vc"
            android:layout_marginLeft="8dp"
            android:text="red"
            android:textColor="#FF000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/v_vc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toEndOf="@id/red_vc"
            android:layout_below="@id/question_vc"
            android:text="v"
            android:textColor="@color/vsBlue"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/s_vc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_vc"
            android:layout_marginRight="4dp"
            android:layout_toEndOf="@id/v_vc"
            android:text="s"
            android:textColor="@color/vsRed"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/blue_vc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_vc"
            android:layout_marginRight="8dp"
            android:layout_toEndOf="@id/s_vc"
            android:text="blue"
            android:textColor="#FF000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/votes_vc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:text="20K votes"
            android:textAlignment="center"
            android:textColor="#FF000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/time_vc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_vc"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:text="2m"
            android:textColor="#FF000000"
            android:textSize="12sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>