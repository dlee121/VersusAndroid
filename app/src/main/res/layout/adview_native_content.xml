<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="0dp">

    <com.google.android.gms.ads.formats.NativeContentAdView
        android:id="@+id/nc_adview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:width="15dp"
                android:height="15dp"
                android:background="#FFCC66"
                android:text="Ad"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/nc_logo_view"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/default_profile"
                android:layout_marginStart="8dp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/nc_advertiser_view"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center|start"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:text="Advertiser View"
                android:textSize="@dimen/vcpc_titles"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_toEndOf="@+id/nc_logo_view" />

            <TextView
                android:id="@+id/nc_headline_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@id/nc_advertiser_view"
                android:layout_centerHorizontal="true"
                android:textColor="#FF000000"
                android:text="Headline View"
                android:textSize="@dimen/vcpc_titles" />

            <TextView
                android:id="@+id/nc_body_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:textColor="#FF000000"
                android:layout_below="@id/nc_headline_view"
                android:text="Body View"
                android:textSize="@dimen/vcpc_titles" />

            <ImageView
                android:id="@+id/nc_image_view"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:gravity="center"
                android:layout_below="@+id/nc_body_view"
                android:layout_centerHorizontal="true"/>

            <View
                android:id="@+id/nc_horizdivider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@id/nc_image_view"/>

            <TextView
                android:id="@+id/nc_call_to_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nc_horizdivider2"
                android:layout_marginEnd="8dp"
                android:textSize="@dimen/vcpc_titles"
                android:textColor="#FF000000"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="8dp"
                android:text="Call to Action" />

        </RelativeLayout>

    </com.google.android.gms.ads.formats.NativeContentAdView>

</android.support.v7.widget.CardView>