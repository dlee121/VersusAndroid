<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vs.bcd.versus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="24" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.vs.bcd.versus.StartScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vs.bcd.versus.ProfilePage"
            android:label="@string/title_activity_profile_page"
            android:parentActivityName="com.vs.bcd.versus.StartScreen"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vs.bcd.versus.StartScreen" />
        </activity>
        <activity
            android:name="com.vs.bcd.versus.PostBeforeVote"
            android:label="@string/title_activity_post_before_vote"
            android:parentActivityName="com.vs.bcd.versus.ProfilePage"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vs.bcd.versus.ProfilePage" />
        </activity>
    </application>

</manifest>